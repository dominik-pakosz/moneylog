{% extends 'base.html.twig' %}

{% block title %}Strona główna{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Szczegóły miesiąca</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Kwota</th>
                    <th>Osoba</th>
                    <th>Szczegóły</th>
                    <th>Data dodania</th>
                    <th>Usuń</th>
                </tr>
                </thead>
                <tbody>
                {% for amount in balance %}
                    <tr>
                        <td>{{ amount.amount|number_format(2) }} zł</td>
                        <td>{{ amount.userId.name }}</td>
                        <td>{{ amount.description }}</td>
                        <td>{{ amount.addDate|date('d-m-Y H:i') }}</td>
                        <td><a href="{{ path('delete', {'id': amount.id}) }}"><span class="glyphicon glyphicon-trash"></span></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-md-11">
            Suma:
            {% if sum > 0 %}
            <span class="label label-success" >
            {% else %}
            <span class="label label-danger" >
            {% endif %}
            {{ sum|number_format(2) }} zł</span>
        </div>
        <div class="col-md-1">
            <a href="{{ path('homepage') }}" class="btn btn-info">Wróć »</a>
        </div>
    </div>
</div>
{% endblock %}



